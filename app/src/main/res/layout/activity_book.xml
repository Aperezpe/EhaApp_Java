<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abraham.ehaapp2.book"
    tools:ignore="NamespaceTypo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <View
               android:id="@+id/block1"
               android:layout_width="match_parent"
               android:layout_height="190dp"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:background="#FF5C5C"
               />

           <View
               android:id="@+id/block2"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_below="@+id/block1"
               android:background="#ECE9DF"
               />



           <Button
               android:id="@+id/download_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:background="@drawable/download_button"
               android:layout_below="@+id/book1"
               android:paddingBottom="5dp"
               android:paddingRight="5dp"
               android:text="Read/Download"
               android:textColor="#fff"
               android:textSize="16dp"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/book1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_alignStart="@+id/download_button"
               android:layout_marginTop="21dp"
               android:background="@drawable/book_shadow" />

           <TextView
               android:id="@+id/title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/block2"
               android:text="@string/book_title"
               android:layout_centerHorizontal="true"
               android:textSize="30dp"
               android:textStyle="bold"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:textColor="#283450"
               />
           <TextView
               android:id="@+id/author"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/title"
               android:text="@string/book_author"
               android:layout_centerHorizontal="true"
               android:textSize="15dp"
               android:layout_marginBottom="15dp"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:textColor="#283450"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/author"
               android:text="@string/book_summary"
               android:layout_centerHorizontal="true"
               android:textSize="15dp"
               android:layout_marginBottom="50dp"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:textColor="#283450"
               />









       </RelativeLayout>

    </ScrollView>

</RelativeLayout>